<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Reset Password</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-9ndCyUa6Y2O8N8+jr65+UcmQF3LCPBq9hYl07D+myM5dV+6Oe9VbYNTKf3LrYAmW" 
    crossorigin="anonymous">
  <!-- Animate.css for animations -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }
    .reset-container {
      max-width: 400px;
      width: 90%;
      margin: 10vh auto;
      padding: 30px;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
      transition: all 0.3s ease;
    }
    h2 {
      margin-bottom: 25px;
      color: #333;
    }
    .form-control {
      padding: 12px;
      border-radius: 8px;
      transition: box-shadow 0.3s ease, border-color 0.3s ease;
    }
    .form-control:focus {
      border-color: #4a77e5;
      box-shadow: 0 0 0 0.2rem rgba(74, 119, 229, 0.25);
    }
    .btn-primary {
      padding: 12px;
      border-radius: 8px;
      background-color: #4a77e5;
      border-color: #4a77e5;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #3a67d5;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .password-info {
      font-size: 0.8rem;
      color: #6c757d;
      margin-top: 5px;
    }
    /* Added for password matching feedback */
    .password-match {
      font-size: 0.85rem;
      margin-top: 8px;
      transition: all 0.3s ease;
    }
    .valid-feedback {
      color: #28a745;
    }
    .invalid-feedback {
      color: #dc3545;
    }
    /* For smaller mobile devices */
    @media (max-width: 576px) {
      .reset-container {
        width: 95%;
        padding: 20px;
        margin: 5vh auto;
      }
      h2 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="reset-container animate__animated animate__fadeInDown">
      <h2 class="text-center animate__animated animate__fadeIn animate__delay-1s">Reset Your Password</h2>
      <form action="/auth/reset-password" method="POST" id="resetForm">
        <!-- Hidden token field passed from the controller -->
        <input type="hidden" name="token" value="<%= token %>">
        
        <div class="mb-3 animate__animated animate__fadeIn animate__delay-1s">
          <label for="newPassword" class="form-label">New Password</label>
          <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Enter new password" required>
          <div class="password-info">
            Use at least 8 characters with letters, numbers and symbols
          </div>
        </div>
        <div class="mb-4 animate__animated animate__fadeIn animate__delay-1s">
          <label for="confirmPassword" class="form-label">Confirm New Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required>
          <div class="password-match" id="passwordFeedback"></div>
        </div>
        <button type="submit" class="btn btn-primary w-100 animate__animated animate__fadeIn animate__delay-2s" id="submitBtn">Reset Password</button>
      </form>
    </div>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ENjdO4Dr2bkBIFxQpeo5sBLYc72E6Qb0I2C+X1EzH0h2O0L1K5zm9x0a8p3F5dEj" 
    crossorigin="anonymous"></script>
  
  <!-- Password validation script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const newPassword = document.getElementById('newPassword');
      const confirmPassword = document.getElementById('confirmPassword');
      const passwordFeedback = document.getElementById('passwordFeedback');
      const submitBtn = document.getElementById('submitBtn');
      const form = document.getElementById('resetForm');
      
      // Add pulse animation to submit button
      submitBtn.addEventListener('mouseover', function() {
        this.classList.add('animate__animated', 'animate__pulse');
      });
      
      submitBtn.addEventListener('mouseout', function() {
        this.classList.remove('animate__animated', 'animate__pulse');
      });
      
      // Check password match
      function checkPasswordMatch() {
        if (confirmPassword.value === '') {
          passwordFeedback.textContent = '';
          passwordFeedback.className = 'password-match';
          return;
        }
        
        if (newPassword.value === confirmPassword.value) {
          passwordFeedback.textContent = '✓ Passwords match';
          passwordFeedback.className = 'password-match valid-feedback animate__animated animate__fadeIn';
        } else {
          passwordFeedback.textContent = '✗ Passwords do not match';
          passwordFeedback.className = 'password-match invalid-feedback animate__animated animate__fadeIn';
        }
      }
      
      newPassword.addEventListener('input', checkPasswordMatch);
      confirmPassword.addEventListener('input', checkPasswordMatch);
      
      // Form submission with animation
      form.addEventListener('submit', function(e) {
        if (newPassword.value !== confirmPassword.value) {
          e.preventDefault();
          confirmPassword.focus();
          confirmPassword.classList.add('animate__animated', 'animate__shakeX');
          setTimeout(() => {
            confirmPassword.classList.remove('animate__animated', 'animate__shakeX');
          }, 1000);
        } else {
          submitBtn.textContent = 'Processing...';
          submitBtn.disabled = true;
          // Form will submit normally
        }
      });
    });
  </script>
</body>
</html>